package ioexp.nio;

import java.io.BufferedWriter;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class NIOWriteToAFile {

	void writeToAFile() throws IOException {
		Path path = Paths.get("c:\\winwin\\feed\\cc.txt");
		// Files.write(path, "Hi".getBytes());
		BufferedWriter bufferedWriter = Files.newBufferedWriter(path,StandardOpenOptions.Append);
		bufferedWriter.write("Hi................................");
	}

}
